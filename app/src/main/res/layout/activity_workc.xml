<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For what works do you want to hire?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Cooking Section -->
        <CheckBox
            android:id="@+id/cookingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooking" />

        <RadioGroup
            android:id="@+id/cookingOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/vegRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg" />

            <RadioButton
                android:id="@+id/nonVegRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N. Veg" />

            <RadioButton
                android:id="@+id/bothRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both" />
        </RadioGroup>

        <EditText
            android:id="@+id/membersEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Members"
            android:inputType="number"
            android:visibility="gone" />

        <!-- Cleaning Section -->
        <CheckBox
            android:id="@+id/cleaningCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaning (Sweep/Mop)" />

        <EditText
            android:id="@+id/houseSizeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="House Size (BHK)"
            android:inputType="number"
            android:visibility="gone" />

        <!-- Utensil Cleaning -->
        <CheckBox
            android:id="@+id/utensilCleaningCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaning Utensils" />

        <!-- Dusting Section -->
        <CheckBox
            android:id="@+id/dustingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dusting (Intense Cleaning)" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp" />

        <!-- Disclaimer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Extra charges for extra work"
            android:paddingTop="8dp"
            android:textStyle="italic" />


    </LinearLayout>

</ScrollView>